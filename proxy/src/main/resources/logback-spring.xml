<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <property name="PATTERN_STDOUT"
              value="%black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                <Pattern>${PATTERN_STDOUT}</Pattern>
            </pattern>
        </layout>
    </appender>

    <appender name="SENDER-EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
        <smtpHost>smtp.gmail.com</smtpHost>
        <smtpPort>587</smtpPort>
        <STARTTLS>true</STARTTLS>
        <username>gliesereum@gmail.com</username>
        <password>Gliesereum0013</password>

        <from>GLIESEREUM SUPPORT gliesereum@gmail.com</from>
        <!-- <to>gliesereum@gmail.com</to>-->
        <to>glie1111@gmail.com</to>
        <subject>ERROR: %logger{20} - %m</subject>
        <layout class="ch.qos.logback.classic.html.HTMLLayout"/>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <appender name="LOGGING_APPENDER" class="com.gliesereum.share.common.logging.appender.LoggingAppender"/>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>

    <root level="INFO">
        <appender-ref ref="LOGGING_APPENDER"/>
        <appender-ref ref="SENDER-EMAIL"/>
    </root>

</configuration>